<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DeliveryTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/green_bright</item>
        <item name="colorSecondary">@color/green_bright</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.Translucent" parent="DeliveryTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="BaseToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/BaseToolbarTheme</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/telefonica_regular</item>
    </style>


    <style name="BaseToolbarTheme">
        <item name="android:textColorPrimary">@color/colorTextSecondary</item>
        <item name="android:textColorSecondary">@color/colorTextPrimary</item>
    </style>

    <style name="CustomTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="editTextShape">
        <item name="android:background">@drawable/shape_et</item>
        <item name="android:textColor">#6F7174</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableLeft">@drawable/baseline_code_24</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edittext_height</item>
    </style>

    <style name="BaseDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">@drawable/shape_et</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="colorPrimary">@color/green_bright</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewTitleHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/telefonica_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">18dp</item>
    </style>

    <style name="TextViewSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/telefonica_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="etShapeSearch">
        <item name="android:background">@drawable/shape_et</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableRight">@drawable/ic_search</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edittext_height</item>
    </style>

    <style name="FullScreenBaseDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="colorPrimary">@color/green_bright</item>
        <item name="colorPrimaryDark">@color/text_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="snackbarStyle">@style/TopBar</item>
    </style>

    <style name="TopBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">@null</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="GeneralButtonStyleGreen">
        <item name="android:background">@drawable/rounded_button_green</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/green_bright</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="GeneralButtonStyleBlue">
        <item name="android:background">@drawable/rounded_button_blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="GeneralButtonStylePink">
        <item name="android:background">@drawable/rounded_button_pink</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DropdownMenuStyleRegular" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextColor">@color/colorError</item>
    </style>

    <style name="AutoCompleteTextViewStyleRegular">
        <item name="android:textColor">#222222</item>
        <item name="android:fontFamily">@font/telefonica_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#c5c5c5</item>
        <item name="colorControlHighlight">#c5c5c5</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="EdiTextShapeNoIcon">
        <item name="android:background">@drawable/shape_et</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edittext_height</item>
    </style>
</resources>
